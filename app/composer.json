{
  "name": "freepikcompany/api-coding-task",
  "description": "An API Backend coding task",
  "license": "MIT",
  "authors": [
    {
      "name": "Freepik Company Backend Guild",
      "email": "dev@freepik.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-pdo": "*",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.5",
    "zircote/swagger-php": "^3.2",
    "php-di/php-di": "^7.0",
    "monolog/monolog": "^2.0",
    "predis/predis": "^1.1",
    "firebase/php-jwt": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": true
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  }
}
